CURDIR = $(shell Rscript -e "cat(getwd())")
GOPATH = $(CURDIR)/go
GOBUILD = go build
CXX_STD = CXX11
CXX11 = g++
PKG_CPPFLAGS += -I'$(CURDIR)' -DRCPP_PARALLEL_USE_TBB=1
PKG_LIBS += -L../inst/libs -lm -lkagome

.PHONY: all

all: build clean

build:
	rm -f ../inst/include/libkagome.h
	CXX="$(CXX11)" GOPATH="$(GOPATH)" CGO_ENABLED=1 $(GOBUILD) -o libkagome$(SHLIB_EXT) -i -a -x -compiler gc -buildmode=c-shared github.com/paithiov909/cmd/libkagome

clean:
	cd $(CURDIR)
	cp libkagome.h ../inst/include
	cp libkagome$(SHLIB_EXT) ../inst/libs
